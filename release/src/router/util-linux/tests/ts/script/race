TS_TOPDIR="$(dirname $0)/../.."
TS_DESC="race conditions"

. $TS_TOPDIR/functions.sh
ts_init "$*"

bingofile="$TS_OUTDIR/${TS_TESTNAME}-bingo"

set -o pipefail

for i in `seq 1 1000`; do
	$TS_CMD_SCRIPT -q -c "printf 'Bingo\n'" $bingofile
done | grep -c Bingo >> $TS_OUTPUT

rm -f $bingofile

ts_finalize

