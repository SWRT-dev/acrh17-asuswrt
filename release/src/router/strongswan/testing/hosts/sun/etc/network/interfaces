auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
	address 192.168.0.2
	netmask 255.255.255.0
	broadcast 192.168.0.255
	gateway 192.168.0.254
iface eth0 inet6 static
	address fec0::2
	netmask 16

auto eth1
iface eth1 inet static
	address 10.2.0.1
	netmask 255.255.0.0
	broadcast 10.2.255.255
iface eth1 inet6 static
	address fec2::1
	netmask 16
